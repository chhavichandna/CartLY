     <div class="row" style="margin-top: 2rem;">
      <% for(let item of products) { %>
      <div class="col-lg-4 mt-3">
        <div class="card shadow mx-auto" 
             style="width: 18rem; border-radius: 10px; overflow: hidden; transition: transform 0.3s ease, box-shadow 0.3s ease;">
          <img src="<%= item.img %>" class="card-img-top" alt="..." style="height: 200px; object-fit: cover;">
          <span class="badge rounded-pill bg-light text-dark w-25 position-absolute translate-middle-y" 
                style="top: 41%; left: 5%; font-size: 14px;"><%= item.avgRating %> &star; | <%= item.reviews.length %></span>
          <div class="card-body" style="padding: 20px;">
            <h5 class="card-title d-flex justify-content-between align-items-center" style="font-weight: bold;">
              <span><%= item.name %></span>
              <span class="btn like-btn" product-id="<%= item._id %>" style="font-size: 20px;">
                <% if(currentUser && currentUser.wishList.includes(item._id)) { %>
                <i class="fas fa-heart"></i>
                <% } else { %>
                <i class="far fa-heart" style="color: red;"></i>
                <% } %>
              </span>
            </h5>
            <p class="card-text" style="font-size: 14px;"><%= item.desc %></p>
            <h5 class="card-title" style="color: #007bff;">Price: <%= item.price %> Rs</h5>
            <% if(item.reviews.length) { %>
            <p class="text-muted"><%= item.reviews.length %> reviews</p>
            <% } else { %>
            <p class="text-muted">No reviews</p>
            <% } %>
            <a href="/products/<%= item._id %>" class="btn btn-sm btn-primary" style="width: 30%;">View</a>
            <% if(currentUser && currentUser.role === 'seller') { %>
            <form class="d-inline-block" action="/products/<%= item._id %>?_method=DELETE" method="POST" style="margin-top: 10px;">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
            <% } %>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    
